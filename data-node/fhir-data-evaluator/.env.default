# --- Input/Output Configuration ---
# Path to the measure definition file
# Default: ./measure/kds-measure.json
INPUT_MEASURE="./measure/kds-measure.json"

# Directory for output files
# Default: ./output
OUTPUT_DIR="./output"

# --- FHIR Source Server Configuration ---
# FHIR server endpoint for data retrieval
# Default: http://localhost:8080/fhir
FHIR_SOURCE_SERVER="http://localhost:8080/fhir"

# Basic authentication credentials (leave empty if not using basic auth)
# Default: (empty)
FHIR_SOURCE_USER=
FHIR_SOURCE_PASSWORD=

# Maximum number of concurrent connections to source server
# Default: 4
FHIR_SOURCE_MAX_CONNECTIONS="4"

# Number of resources to fetch per page
# Default: 1000
FHIR_SOURCE_PAGE_COUNT="1000"

# Bearer token authentication (leave empty if not using bearer token)
# Default: (empty)
FHIR_SOURCE_BEARER_TOKEN=

# OAuth 2.0 configuration for source server
# Default: https://auth.localhost:444/realms/blaze
FHIR_SOURCE_OAUTH_ISSUER_URI="https://auth.localhost:444/realms/blaze"
FHIR_SOURCE_OAUTH_CLIENT_ID="account"
FHIR_SOURCE_OAUTH_CLIENT_SECRET="insecure"

# --- FHIR Report Server Configuration ---
# FHIR server endpoint for report submission
# Default: http://localhost:8080/fhir
FHIR_REPORT_SERVER="http://localhost:8080/fhir"

# Basic authentication credentials (leave empty if not using basic auth)
# Default: (empty)
FHIR_REPORT_USER=
FHIR_REPORT_PASSWORD=

# Maximum number of concurrent connections to report server
# Default: 4
FHIR_REPORT_MAX_CONNECTIONS="4"

# Bearer token authentication (leave empty if not using bearer token)
# Default: (empty)
FHIR_REPORT_BEARER_TOKEN=

# OAuth 2.0 configuration for report server
# Default: https://auth.localhost:444/realms/blaze
FHIR_REPORT_OAUTH_ISSUER_URI="https://auth.localhost:444/realms/blaze"
FHIR_REPORT_OAUTH_CLIENT_ID="account"
FHIR_REPORT_OAUTH_CLIENT_SECRET="insecure"

# --- Memory and Performance Configuration ---
# Maximum in-memory size in MiB
# Default: 10
MAX_IN_MEMORY_SIZE_MIB="10"

# --- Timezone Configuration ---
# Timezone for report generation
# Default: Europe/Berlin
TZ="Europe/Berlin"

# --- Report Configuration ---
# Whether to send the report to the FHIR server
# Default: true
SEND_REPORT_TO_SERVER="true"

# Whether to create an obfuscated version of the report
# Default: true
CREATE_OBFUSCATED_REPORT="true"

# --- Author Identification ---
# System identifier for the report author organization
# Default: http://dsf.dev/sid/organization-identifier
AUTHOR_IDENTIFIER_SYSTEM="http://dsf.dev/sid/organization-identifier"

# Value identifier for the report author organization
# Default: fde-dic
AUTHOR_IDENTIFIER_VALUE="fde-dic"

# --- Project Identification (Standard Report) ---
# System identifier for the project
# Default: http://medizininformatik-initiative.de/sid/project-identifier
PROJECT_IDENTIFIER_SYSTEM="http://medizininformatik-initiative.de/sid/project-identifier"

# Value identifier for the project
# Default: fdpg-data-availability-report
PROJECT_IDENTIFIER_VALUE="fdpg-data-availability-report"

# --- Project Identification (Obfuscated Report) ---
# System identifier for the obfuscated project report
# Default: http://medizininformatik-initiative.de/sid/project-identifier
PROJECT_IDENTIFIER_SYSTEM_OBFUSCATED_REPORT="http://medizininformatik-initiative.de/sid/project-identifier"

# Value identifier for the obfuscated project report
# Default: fdpg-data-availability-report-obfuscated
PROJECT_IDENTIFIER_VALUE_OBFUSCATED_REPORT="fdpg-data-availability-report-obfuscated"
