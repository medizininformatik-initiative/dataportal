# --- Flare Server Configuration ---
# Local port binding for Flare data node
# Default: 127.0.0.1:8084
DATA_NODE_FLARE_PORT=127.0.0.1:8084

# Enable Flare service
# Default: true
FLARE_ENABLED=true

# --- FHIR Server Connection ---
# FHIR server endpoint URL
# Default: http://fhir-server:8080/fhir
FLARE_FHIR_SERVER_URL=http://fhir-server:8080/fhir

# Basic authentication credentials (leave empty if not using basic auth)
# Default: (empty)
FLARE_FHIR_USER=
FLARE_FHIR_PASSWORD=

# Number of resources to fetch per page
# Default: 500
FLARE_FHIR_PAGE_COUNT=500

# Maximum number of concurrent connections to FHIR server
# Default: 32
FLARE_FHIR_MAX_CONNECTIONS=32

# --- Cache Configuration (Memory) ---
# In-memory cache size in MB
# Default: 1024
FLARE_CACHE_MEM_SIZE_MB=1024

# Time after which cached entries expire (ISO 8601 duration)
# Default: PT48H (48 hours)
FLARE_CACHE_MEM_EXPIRE=PT48H

# Time after which cached entries are refreshed (ISO 8601 duration)
# Default: PT24H (24 hours)
FLARE_CACHE_MEM_REFRESH=PT24H

# --- Cache Configuration (Disk) ---
# Number of threads for disk cache operations
# Default: 4
FLARE_CACHE_DISK_THREADS=4

# Path to disk cache directory
# Default: cache
FLARE_CACHE_DISK_PATH=cache

# Time after which disk cached entries expire (ISO 8601 duration)
# Default: P7D (7 days)
FLARE_CACHE_DISK_EXPIRE=P7D

# --- OAuth 2.0 Configuration ---
# OAuth issuer URI for FHIR server authentication
# Default: https://auth.localhost:444/realms/blaze
FLARE_FHIR_OAUTH_ISSUER_URI=https://auth.localhost:444/realms/blaze

# OAuth client ID
# Default: account
FLARE_FHIR_OAUTH_CLIENT_ID=account

# OAuth client secret
# Default: insecure
FLARE_FHIR_OAUTH_CLIENT_SECRET=insecure

# --- Feature Flags ---
# Enable cohort endpoint functionality
# Default: true
FLARE_ENABLE_COHORT_ENDPOINT=true

# --- JVM Performance Tuning ---
# Java tool options for memory allocation
# Default: system dependent
JAVA_TOOL_OPTIONS=-Xmx4g

# --- Logging Configuration ---
# Logging level (trace, debug, info, warn, error)
# Default: info
LOG_LEVEL=debug