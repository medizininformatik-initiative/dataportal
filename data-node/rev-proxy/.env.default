# Set separate hostnames if 'subdomains.nginx.conf' is used (see DATA_NODE_REV_PROXY_NGINX_CONFIG below).
# For 'context-paths.nginx.conf' these values are ignored.

# --- Hostname Configuration ---
# Hostname for the FHIR server
# Default: fhir.example.org
FHIR_SERVER_HOSTNAME="fhir.example.org"

# Hostname for Keycloak authentication server
# Default: auth.example.org
KEYCLOAK_HOSTNAME="auth.example.org"

# Hostname for Flare service
# Default: flare.example.org
FLARE_HOSTNAME="flare.example.org"

# Hostname for TORCH service
# Default: torch.localhost
TORCH_HOSTNAME="torch.localhost"

# Hostname for terminology server
# Default: terminology.localhost
TERMINOLOGY_SERVER_HOSTNAME="terminology.localhost"

# Hostname for FHIR pseudonymizer service
# Default: dimp.localhost
FHIR_PSEUDONYMIZER_HOSTNAME="dimp.localhost"

# Hostname for FHIR flattener service
# Default: flattener.localhost
FHIR_FLATTENER_HOSTNAME="flattener.localhost"

# Hostname for FHIR validator service
# Default: validator.localhost
FHIR_VALIDATOR_HOSTNAME="validator.localhost"

# --- Reverse Proxy Configuration ---
# Path to Nginx configuration file for context paths
# Default: ./context-paths.nginx.conf
DATA_NODE_REV_PROXY_NGINX_CONFIG="./context-paths.nginx.conf"

# Port for the reverse proxy server
# Default: 444
DATA_NODE_REV_PROXY_PORT="444"

# Path to SSL/TLS certificate file
# Default: ../auth/cert.pem
DATA_NODE_REV_PROXY_CERTIFICATE_FILE="../auth/cert.pem"

# Path to SSL/TLS certificate private key file
# Default: ../auth/cert.key
DATA_NODE_REV_PROXY_CERTIFICATE_PRIVATE_KEY_FILE="../auth/cert.key"

# Path to HTTP basic authentication password file
# Default: ../auth/.htpasswd
DATA_NODE_REV_PROXY_HTTP_PASSWORD_FILE="../auth/.htpasswd"
