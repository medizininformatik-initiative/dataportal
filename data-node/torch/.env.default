# --- Base Configuration ---
# Enable TORCH service
# Default: true
TORCH_ENABLED=true

# Duration to persist results (ISO 8601 duration)
# Default: PT12H30M5S
TORCH_RESULTS_PERSISTENCE=PT12H30M5S

# Buffer size for data processing
# Default: 100
TORCH_BUFFERSIZE=100

# Path to data volume (leave empty for default)
# Default: (empty)
TORCH_DATA_VOLUME=

# --- Connection Configuration ---
# Base URL for TORCH service
# Default: http://localhost:8080
TORCH_BASE_URL=http://localhost:8080

# URL for output file server
# Default: http://localhost
TORCH_OUTPUT_FILE_SERVER_URL=http://localhost

# Flare service endpoint URL
# Default: http://torch-flare:8080
TORCH_FLARE_URL=http://torch-flare:8080

# FHIR server endpoint URL
# Default: http://fhir-server:8080/fhir
TORCH_FHIR_URL=http://fhir-server:8080/fhir

# Basic authentication credentials (leave empty if not using basic auth)
# Default: (empty)
TORCH_FHIR_USER=
TORCH_FHIR_PASSWORD=

# OAuth 2.0 configuration for FHIR server
# Default: https://auth.localhost:444/realms/blaze
TORCH_FHIR_OAUTH_ISSUER_URI=https://auth.localhost:444/realms/blaze

# OAuth client ID
# Default: account
TORCH_FHIR_OAUTH_CLIENT_ID=account

# OAuth client secret
# Default: insecure
TORCH_FHIR_OAUTH_CLIENT_SECRET=insecure

# --- Execution Configuration ---
# Java tool options for memory allocation
# Default: system dependent
JAVA_TOOL_OPTIONS=-Xmx8g

# Enable CQL (Clinical Quality Language) support
# Default: true
TORCH_USE_CQL=true

# Disable asynchronous FHIR operations
# Default: true
TORCH_FHIR_DISABLE_ASYNC=true

# Batch size for processing operations
# Default: 500
TORCH_BATCHSIZE=500

# Number of resources to fetch per FHIR page
# Default: 500
TORCH_FHIR_PAGE_COUNT=500

# Maximum number of concurrent connections to FHIR server
# Default: 5
TORCH_FHIR_MAX_CONNECTIONS=5

# Maximum concurrency level for parallel operations
# Default: 4
TORCH_MAXCONCURRENCY=4

# Maximum in-memory size for Spring codec
# Default: 100MB
SPRING_CODEC_MAX_IN_MEMORY_SIZE=100MB

# --- Logging Configuration ---
# Logging level (trace, debug, info, warn, error)
# Default: info
LOG_LEVEL=info